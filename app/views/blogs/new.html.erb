<%= form_with(model: @blog, local: true) do |form| %>

    <div class="title">
      <%= form.label :title %>
      <%= form.text_field :title %>

      <br><%= form.label :start_time %>
      <%= form.datetime_select :start_time %>
    </div>
  
    <div class="content">
      <%= form.label :content %>
      <%= form.text_field :content, :size =>"130x 60" %>
      <%= form.submit %>
    </div>
  
  <% end %>
  